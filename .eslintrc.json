{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "plugins": [
        "@typescript-eslint",
        "sql"
    ],
    "rules": {
        "sql/format": [
            2,
            {
              "ignoreExpressions": false,
              "ignoreInline": true,
              "ignoreTagless": true
            }
          ],
          "sql/no-unsafe-query": [
            2,
            {
              "allowLiteral": false
            }
          ]
    }
}
